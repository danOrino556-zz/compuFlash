<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:background="@drawable/white_rounded_corners">>


    <ScrollView
        android:layout_width="513dp"
        android:layout_height="350dp"
        android:id="@+id/scrollViewFAQ" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Answer"
            android:id="@+id/dialogAnswerTextView"
            android:textColor="#191919"
            android:gravity="center_vertical"
            android:textSize="20sp" />
    </ScrollView>



    <Button
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:id="@+id/dialogAnswerButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/light_grey_rounded_corners"
        android:text="Close"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:textColor="#ffffff" />

</LinearLayout>